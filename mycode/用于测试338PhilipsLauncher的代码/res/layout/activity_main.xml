<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/getAllPackageInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getAllPackageInfo"
        android:text="@string/getAllPackageInfo" />
     <Button
        android:id="@+id/showTimeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showTimeInfo"
        android:text="@string/showTimeInfo" />
     <Button
        android:id="@+id/showdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showDialog"
        android:text="@string/showdialog" />

</LinearLayout>